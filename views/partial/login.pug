extends ../layout

block content
    header
      .header-content
        link(rel='stylesheet', href='/stylesheets/signin.css')    
        .container
        form.form-signin(method='post', action='/login')
            h2.form-signin-heading #{title}
            label.sr-only(for='inputUsername') Username
            input#inputUsername.form-control(type='text', name='username', placeholder='Username', required='', minlendth='5', autofocus='')
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(type='password', name='password', placeholder='Password', minlendth='5', required='')
            include errors.pug
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
            label
                a(href='/register') or register
        